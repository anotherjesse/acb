TELEGRAM_BOT_KEY=replace_with_bot_token
OPENAI_API_KEY=replace_with_openai_api_key
# Optional CLI log level: debug | info | warn | error
# LOG_LEVEL=info
# Optional routing scope:
# If TELEGRAM_SCOPE_TO_FORUM_TOPIC is true (default when TELEGRAM_FORUM_CHAT_ID is set),
# this bot instance will only process updates from its own forum topic.
# TELEGRAM_SCOPE_TO_FORUM_TOPIC=true
# Optional hard override (useful for manual pinning):
# TELEGRAM_ALLOWED_CHAT_ID=-1001234567890
# TELEGRAM_ALLOWED_THREAD_ID=42
# Optional forum-supergroup auto announcement on startup
# TELEGRAM_FORUM_CHAT_ID=-1001234567890
# TELEGRAM_LOCATION_LABEL=macbook-pro
# TELEGRAM_LOCATION_KEY=macbook-pro:rc
# TELEGRAM_REPO_NAME=rc
# Optional TTS overrides for final response audio
# OPENAI_TTS_MODEL=gpt-4o-mini-tts
# OPENAI_TTS_VOICE=coral
# OPENAI_TTS_INSTRUCTIONS=Speak in a cheerful and positive tone.

# Optional Codex settings
# CODEX_MODEL=gpt-5-codex
# CODEX_WORKING_DIRECTORY=/Users/jesse/oss/rc
# CODEX_SKIP_GIT_REPO_CHECK=true
# CODEX_NETWORK_ACCESS=true
# CODEX_ADDITIONAL_DIRECTORIES=/Users/jesse/oss/shared

# YOLO mode convenience toggle:
# Equivalent to sandbox=danger-full-access + approval=never unless explicit values are set.
# CODEX_YOLO=true

# Explicit overrides (take precedence over CODEX_YOLO behavior if set)
# CODEX_SANDBOX_MODE=workspace-write
# CODEX_APPROVAL_POLICY=on-request
